    <Button
        android:id="@+id/btn_capnhat"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#EF7777"
        android:text="Cập nhật thông tin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/thongbao"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toobar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="200dp"
            android:background="@color/grey"
            android:orientation="horizontal"

            tools:layout_editor_absoluteX="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:src="@drawable/ava"></ImageView>

            <TextView
                android:id="@+id/tex"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:text="Vì bạn vừa cập nhật thông tin tài khoản nên bạn hãy khởi động lại ứng dụng để kiểm tra lại thông tin đã chính xác hay chưa!"
                android:textColor="#131313"
